// imports
@import "kouto-swiss"

// resets
meyer-reset()
box-sizing-reset()

// fonts
ExtraLight = 100
font-face( "FiraSans", "fonts/firasans/FiraSans-ExtraLight", ExtraLight, formats: eot woff )
Light = 200
font-face( "FiraSans", "fonts/firasans/FiraSans-Light", Light, formats: eot woff )
// normal
font-face( "FiraSans", "fonts/firasans/FiraSans-Book", formats: eot woff )
font-face( "FiraSans", "fonts/firasans/FiraSans-BookItalic", normal, italic, formats: eot woff )
Medium = 400
font-face( "FiraSans", "fonts/firasans/FiraSans-Medium", Medium, formats: eot woff )
SemiBold = 500
font-face( "FiraSans", "fonts/firasans/FiraSans-SemiBold", SemiBold, formats: eot woff )
Bold = 600
font-face( "FiraSans", "fonts/firasans/FiraSans-Bold", Bold, formats: eot woff )
FiraSans = "FiraSans", "Fira Sans", "FiraSansOT", font-stack( "Helvetica" )
font-face( "FiraMono", "fonts/firamono/FiraMono-Regular", formats: eot woff )
font-face( "FiraMono", "fonts/firamono/FiraMono-Regular", bold, formats: eot woff )
FiraMono = "FiraMono", font-stack( "Consolas" )
font-face( "Norwester", "fonts/norwester/norwester", formats: eot woff )
Norwester = "Norwester", FiraSans
font-face( "WebHostingHub", "fonts/webhostinghub/webhostinghub-glyphs-webfont", formats: eot truetype svg )
Glyphs = "WebHostingHub", "WebHostingHub-Glyphs"

// vars
cKoutoSwiss = #c30

*
    -webkit-font-smoothing antialiased
    -webkit-text-size-adjust 100%

html
    width 100%
    background white
    font normal 62.5%/1.5 FiraSans

body
    color black

a
    color cKoutoSwiss
    text-decoration none
    transition color .25s ease-in-out
    &:hover
        color complement( cKoutoSwiss )

div[id="wrapper"]
    position relative
    width 100%
    overflow hidden

header
    position relative
    width 100%
    margin 0 auto 70px
    padding 1px 0 0
    background cKoutoSwiss
    &:after
        content ""
        display block
        position absolute
        width 120%
        height 80px
        margin -55px 0 0 -10%
        background cKoutoSwiss
        transform rotate( -10deg )
    h1
        position relative
        margin 10px auto 0
        z-index 20
        a
            display block
            margin 0 70px 0 10px
            font normal 3.225rem/1 Norwester
            color white
            text-decoration none
            &:hover
                color white
    h2
        position relative
        margin 0 0 5px 10px
        z-index 20
        font SemiBold 1rem FiraSans
        color white
    &.home
        padding 1px 0 5px
        &:after
            content ""
            display block
            position absolute
            width 120%
            height 90px
            margin -45px 0 0 -10%
            background cKoutoSwiss
            transform rotate( -10deg )
        h1
            margin 19px auto 0
            a
                display block
                margin 0 auto
                font normal 5rem/1 Norwester
                color white
                text-align center
                text-decoration none
                &:before
                    content ""
                    display block
                    width 120px
                    height 80px
                    margin 0 auto 10px
                    background url( "img/logo.svg" ) right center no-repeat
                    background-size auto 100%
                &:hover
                    color white
        h2
            margin 0 auto 25px
            font SemiBold 1.55rem FiraSans
            color white
            text-align center
        .buttons
            position relative
            z-index 10
            text-align center
            a
                display inline-block
                width 120px
                padding 8px 0
                border 2px solid white
                font SemiBold 1.8rem FiraSans
                color white
                text-decoration none
                &:first-child
                    border-right-width 1px
                    border-radius 5px 0 0 5px
                &:last-child
                    background white
                    border-left-width 1px
                    border-radius 0 5px 5px 0
                    color cKoutoSwiss
    > a
        position absolute
        display block
        width 40px
        height 40px
        top 8px
        right 10px
        z-index 30
        text-indent -9999px
        &:before
            content ""
            position absolute
            display block
            top 4px
            right 0
            font normal 2.4rem Glyphs
            color white
            text-align right
    nav
        position relative
        display none
        margin 10px 10px 20px
        z-index 20
        > ul
            border 2px solid white
            border-radius 5px
            > li
                strong
                    display block
                    padding 8px 0 5px
                    font normal 1.6rem/1 FiraSans
                    color white
                    text-transform uppercase
                    text-align center
                > ul
                    border 2px solid white
                    border-left 0
                    border-right 0
                    > li
                        a
                            display block
                            padding 13px 10px 10px
                            background white
                            border-bottom 1px solid cKoutoSwiss
                            font normal 1.4rem/1 FiraSans
                            color cKoutoSwiss
                            text-align left
                            &.active
                                padding-top 11px
                                padding-left 0
                                background cKoutoSwiss
                                color white
                                &:before
                                    content ""
                                    display inline-block
                                    triangle( right, 10px, white )
                                    vertical-align -5px
                        &:last-child a
                            border-bottom 0
        &.open
            display block

section
    margin 0 auto 20px
    h3
        width 120%
        margin 30px -10% 50px
        padding 4px 10% 0
        background cKoutoSwiss
        font normal 2.4rem/2 Norwester
        color white
        text-transform uppercase
        transform rotate( -10deg )
        &:before
            content ""
            display inline-block
            width 10px
    h4
        margin 20px 10px
        font SemiBold 1.8rem FiraSans
    h5
        margin 0 10px 5px
        font SemiBold 1.6rem FiraSans
    p
        margin 0 10px 1rem
        font Light 1.6rem FiraSans
        strong
            font-weight normal
        code
            padding 0 .5rem
            border 1px solid transparent
            font normal 1.5rem FiraMono
            color #008a67
            transition all .25s ease-in-out
            &:hover
                background #fff1cc
                border 1px solid shade( #ffe399, 15% )
                border-radius 3px
        &.punchline
            margin 2.5rem 10px 1rem
            font-weight SemiBold
            color cKoutoSwiss
    pre
        margin 10px
    &.about
        blockquote
            position relative
            margin 0 10px 20px
            padding 0 0 0 60px
            text-align right
            &:before
                content "“"
                position absolute
                top -40px
                right 0
                font italic Light 8rem/1 FiraSans
                color cKoutoSwiss
            p
                font italic Light 1.8rem FiraSans
                color cKoutoSwiss
    &.usage
        h5
            text-align center
            a
                display inline-block
                width 75px
                text-indent -9999px
                &[id="grunt-site"]
                    height 100px
                    background url( "img/grunt-logo.svg" ) top center no-repeat
                    background-size contain
                &[id="gulp-site"]
                    height 100px
                    background url( "img/gulp-logo.svg" ) top center no-repeat
                    background-size contain

div.docs
    margin 0 10px
    > h2
        margin 0 auto 2rem
        font normal 2rem FiraSans
        color cKoutoSwiss
        text-align center
    article
        margin 0 auto 30px
        padding 0 0 30px
        border-bottom 1px solid tint( cKoutoSwiss, 75% )
        > h1
            margin 0 auto 1.75rem
            font normal 1.8rem FiraSans
            code
                font normal 1.8rem FiraMono
        > h3
            margin 0 auto .5rem 1.5rem
            font normal 1.6rem FiraSans
            color tint( cKoutoSwiss, 15% )
        p
        ul
        ol
            margin 0 auto 1rem
            font Light 1.6rem FiraSans
            strong
                font-weight normal
            code
                padding 0 .5rem
                border 1px solid transparent
                font normal 1.5rem FiraMono
                transition all .25s ease-in-out
                &:hover
                    background #fff1cc
                    border 1px solid shade( #ffe399, 15% )
                    border-radius 3px
        ul
        ol
            li
                margin 0 auto .75rem
        pre
            margin 10px 0 20px
        &:last-child
            border-bottom 0

footer
    position relative
    width 100%
    margin 100px auto 0
    padding 1px 0 20px
    background cKoutoSwiss
    &:before
        content ""
        display block
        position absolute
        width 120%
        height 90px
        margin -45px 0 0 -10%
        background cKoutoSwiss
        transform rotate( -10deg )
    p
        position relative
        margin 0 10px 10px
        font Light 1.4rem FiraSans
        color white
        z-index 10
        strong
            font-weight normal
        a
            font-weight normal
            color tint( complement( cKoutoSwiss ), 66% )
    .buttons
        position relative
        margin 10px auto 0
        z-index 10
        text-align center
        a
            display inline-block
            width 80px
            padding 4px 0
            border 2px solid white
            font SemiBold 1.4rem FiraSans
            color white
            text-decoration none
            &:first-child
                border-right-width 1px
                border-radius 5px 0 0 5px
            &:last-child
                background white
                border-left-width 1px
                border-radius 0 5px 5px 0
                color cKoutoSwiss

