// imports
@import "kouto-swiss"

// resets
meyer-reset()
box-sizing-reset()

// fonts
font-face( "FiraSans", "./fonts/firasans/firasans", formats: eot woff )
FiraSans = "FiraSans", font-stack( "Helvetica" )
font-face( "Norwester", "./fonts/norwester/norwester", formats: eot woff )
Norwester = "Norwester", FiraSans

*
    -webkit-font-smoothing antialiased
    -webkit-text-size-adjust 100%

html
    font normal 62.5%/1.5 FiraSans
