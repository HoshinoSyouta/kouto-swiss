// _replace
// internal search and replace in expr
_replace( expr, str, val )
    expr = clone( expr )
    for e, i in expr
        if str == e
            expr[ i ] = val
    expr

// _strip-units
// remove units of a number
_strip-units( val )
    unit( val, "" )

// percent( x, y )
// return the percentage value of x in y
percent( x, y )
    x = _strip-units( x )
    y = _strip-units( y )
    x / y * 100%
