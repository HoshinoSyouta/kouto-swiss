clearfix()
    &:before
    &:after
        content " "
        display table
    &:after
        clear both

clear( value, args... )
    if value == fix
        clearfix()
    else
        clear value

fix()
    if( current-property && current-property[ 0 ] == "clear" )
        fix
    else
        error( "fix() must be used within a clear property" )
